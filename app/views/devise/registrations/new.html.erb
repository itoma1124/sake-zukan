<%= link_to(root_path, class: 'd-flex justify-content-center align-items-center') do %> <%#上段ロゴ＆タイトル%>
  <%= image_tag 'title-logo.png' , size: '185x50' , class:"img-fluid"%>
  <h1 class="text-body">僕の私の酒図鑑</h1>
<% end %>
<div class="container my-2">
<h2>ユーザー新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container my-2">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname,class:"form-control w-75" %>
  </div>

  <div class="container my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control w-75" %>
  </div>

  <div class="container my-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control w-75" %>
  </div>

  <div class="container my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control w-75" %>
  </div>

  <div class="container my-2">
    <%= f.submit "登録" ,class:"btn-light"%>
    <%= link_to 'ログインへ', new_user_session_path, class: "my-2 col" %>
  </div>
<% end %>
</div>